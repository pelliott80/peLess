<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.VBox?>

<!--
	Most all of this was auto generated by Scene Builder
	we have a vertical box containing 2 things:
	1) the menu bar.
	2) the Tabbed Pane which holds all the tabs.
	
	The Tabs themselves will be generated dynamically, in response to onAction
	requests. 
	
	this code works hand and glove with the class Base
	they should be considered together.
 -->

<VBox fx:id="container" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@/css/peless.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blackpatchpanel.free.peless.controller.Base">
  
   <children>
   	  <!--
   	  This is the menu bar which has all the menus for user control 
   	   -->
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <!--
              open creates a new tab displaying new file 
               -->
              <MenuItem mnemonicParsing="false" onAction="#openNewFile" text="Open">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <!--
                  destroy a tab and return its address 
                   -->
                  <MenuItem mnemonicParsing="false" onAction="#closeFile" text="Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <!-- The onAction calls Base.requestExit which in turn calls Platform.exit() -->
                  <MenuItem mnemonicParsing="false" onAction="#requestExit" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <!--
      Tabs added to this tab pane will be created dynamically 
       -->
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
      fx:id="tabPane" 
      />
   </children>
</VBox>
